# Copy this to .env and fill in all values before running docker compose up.

# ── GitHub Webhook ───────────────────────────────────────────────────────────
# Secret set in GitHub → repo Settings → Webhooks
GITHUB_WEBHOOK_SECRET=

# ── GitHub Container Registry ────────────────────────────────────────────────
GHCR_USERNAME=
# Classic PAT with read:packages scope
GHCR_PAT=

# ── Web UI Auth ───────────────────────────────────────────────────────────────
UI_USERNAME=admin
UI_PASSWORD=changeme

# Random string used to sign session cookies — change this!
SESSION_SECRET=change-this-to-a-random-string

# Docker socket GID — run: stat -c '%g' /var/run/docker.sock
# Allows the non-root container user to access the Docker socket.
DOCKER_GID=988

# ── GitHub API (for repo autofill in the UI) ─────────────────────────────────
# Fine-grained PAT with repo:read + packages:read, or a Classic PAT.
# Falls back to GHCR_PAT if not set — set this separately if preferred.
GITHUB_TOKEN=

# ── GitHub OAuth App (for Browse GitHub button) ──────────────────────────
# Create at github.com/settings/developers → New OAuth App
# Set Authorization callback URL to: https://your-host/auth/github/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
# Public URL of this server (used in OAuth redirect_uri)
APP_BASE_URL=http://localhost:3002

# ── Discord Notifications (optional) ─────────────────────────────────────────
DISCORD_WEBHOOK_URL=
